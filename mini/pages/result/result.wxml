<!--输入框-->

<form bindsubmit='toSearch'>
<view class='searchbar'>
  <view class="input-area">
    <input name='word' value='{{word}}' bindconfirm="toConfirmSearch" focus='{{focus}}'></input>
    <icon type="clear" size="15" bindtap="toClear"></icon>
    <!--
    <view id="clear" bindtap="toClear">  
    </view>-->
  </view>

  </view>
</form>




<!--展示查询结果-->
<view class='results-panel'>
  <view class='results' >
    <block wx:for='{{trans}}' wx:key='id'>
      <view class='trans-line'>{{item}}</view>
    </block>
  </view>

