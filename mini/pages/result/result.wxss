input{
  background-color:white;
  width:330px;
  height:30px;
}

.searchbar{
  display:flex;
  justify-content:space-around;
 
  align-items:center;
  position: fixed;
  z-index: 1;
  width:100%;
}

.input-area{
  height:50px;
  width: 100%;
  display: flex;
  justify-content: center;
  border: solid 1px lightgray;
  background-color: white;
  align-items: center;
  flex-direction: row;
}

.search-btn{
  width:20px;
  height:42px;
  background-color:#1b9e1b;
  border-radius: 0
}

.results-panel{
  position: fixed;
  z-index: -1;
  top:52px;
  width:100%;
  font-size:0.9em
}



.pronounce{
  justify-content: flex-start
}


.trans-line{
  padding:5px
}

.add-memo{
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 1;
  bottom:0px;
  width:100%;
  background-color:white;
  height:51px;
  color:#2bb32a;
  border-top:solid 1px lightgray
}

.add-memo-btn{
  height:30px;
  width:30px;
}

.add-memo-icon{
  background-image: url('data:image/svg+xml;base64,');
  width:25px;
  height: 25px;
  background-size: cover;
  margin-left: 10px
}

.link{
  color:blue
}

.content-block{
  background-color: white;
  margin:5px;
  padding:10px
}

form{
  width:100%;
  background-color:white
}

.word{
  font-size:2em;
  font-weight: bold;
  color:#1aad19
}

.title{
  font-weight: bold
}